{
  "permissions": {
    "allow": [
      "Bash(git status:*)",
      "Bash(git branch:*)",
      "Bash(git log:*)",
      "Bash(git diff:*)",
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(npm run:*)",
      "Bash(npm test:*)",
      "Bash(npm install:*)",
      "Bash(docker mcp:*)",
      "Bash(sqlite3:*)",
      "Bash(ls:*)",
      "Bash(cat:*)",
      "Bash(head:*)",
      "Bash(tail:*)",
      "Bash(grep:*)",
      "Bash(find:*)",
      "Bash(wc:*)",
      "Read(.yoyo-dev/**)",
      "Read(.yoyo-ai/**)",
      "Read(.claude/**)",
      "Write(.yoyo-dev/**)",
      "Write(.yoyo-ai/**)"
    ],
    "deny": [
      "Read(.env*)",
      "Read(**/.env*)",
      "Read(**/secrets/**)",
      "Read(**/*.pem)",
      "Read(**/*.key)",
      "Bash(rm -rf:*)",
      "Bash(git push --force:*)"
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "~/.claude/yoyo-statusline.sh"
  },
  "outputStyle": "yoyo"
}
