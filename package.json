{
  "name": "@yoyo-ai/cli",
  "version": "6.0.0",
  "description": "Memory-first AI development framework CLI",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "yoyo-ai": "./bin/yoyo-ai"
  },
  "files": [
    "dist",
    "bin",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "build:clean": "rm -rf dist && tsc",
    "build:hook": "esbuild src/hooks/orchestrate-entry.ts --bundle --platform=node --target=node18 --format=cjs --outfile=.claude/hooks/orchestrate.cjs",
    "dev": "tsc --watch",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "lint": "biome check src/",
    "format": "biome format --write src/",
    "cli": "tsx src/cli/index.ts",
    "cli:dev": "tsx --watch src/cli/index.ts",
    "prepublishOnly": "npm run build:clean && npm test"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yoyo-ai/yoyo-dev.git"
  },
  "dependencies": {
    "@types/js-yaml": "^4.0.9",
    "ansi-escapes": "^7.2.0",
    "better-sqlite3": "^11.6.0",
    "chalk": "^5.3.0",
    "chokidar": "^5.0.0",
    "commander": "^12.1.0",
    "glob": "^11.0.0",
    "gray-matter": "^4.0.3",
    "ink": "^5.0.0",
    "ink-box": "^2.0.0",
    "ink-spinner": "^5.0.0",
    "ink-text-input": "^6.0.0",
    "js-yaml": "^4.1.1",
    "marked": "^15.0.4",
    "marked-terminal": "^7.2.1",
    "react": "^18.3.1",
    "terminal-size": "^4.0.0",
    "uuid": "^11.0.3",
    "ws": "^8.0.0",
    "zod": "^4.2.1",
    "zustand": "^5.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@testing-library/react": "^16.3.1",
    "@types/better-sqlite3": "^7.6.12",
    "@types/node": "^22.10.2",
    "@types/react": "^18.3.12",
    "@types/uuid": "^10.0.0",
    "@types/ws": "^8.18.1",
    "@vitest/coverage-v8": "^2.1.9",
    "esbuild": "^0.24.2",
    "ink-testing-library": "^4.0.0",
    "shadcn": "^3.5.1",
    "tsx": "^4.21.0",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "keywords": [
    "ai",
    "memory",
    "coding-assistant",
    "llm",
    "developer-tools"
  ],
  "license": "MIT"
}
