{
  "name": "yoyo-dev",
  "displayName": "Yoyo Dev",
  "description": "AI-assisted development workflow framework - systematic planning, specification, and execution for Claude Code and Cursor",
  "version": "0.1.0",
  "publisher": "yoyo-dev",
  "icon": "icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/yoyo-dev/yoyo-dev"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other",
    "Programming Languages",
    "Snippets"
  ],
  "keywords": [
    "ai",
    "claude",
    "cursor",
    "workflow",
    "productivity",
    "planning",
    "specification",
    "tasks"
  ],
  "activationEvents": [
    "workspaceContains:.yoyo-dev"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "yoyo-dev",
          "title": "Yoyo Dev",
          "icon": "resources/yoyo-icon.svg"
        }
      ]
    },
    "views": {
      "yoyo-dev": [
        {
          "id": "yoyoDevTasks",
          "name": "Tasks",
          "contextualTitle": "Yoyo Dev Tasks",
          "when": "yoyoDevActive"
        },
        {
          "id": "yoyoDevRoadmap",
          "name": "Roadmap",
          "contextualTitle": "Yoyo Dev Roadmap",
          "when": "yoyoDevActive"
        },
        {
          "id": "yoyoDevGit",
          "name": "Git Info",
          "contextualTitle": "Yoyo Dev Git",
          "when": "yoyoDevActive"
        },
        {
          "id": "yoyoDevWelcome",
          "name": "Welcome",
          "when": "!yoyoDevActive"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "yoyoDevWelcome",
        "contents": "No Yoyo Dev project detected.\n\nTo use this extension:\n1. Open a folder that contains a `.yoyo-dev` directory\n2. Or run `/plan-product` to initialize a new Yoyo Dev project\n\n[Open Folder](command:vscode.openFolder)\n\nCurrent workspace: Check VS Code Output > Yoyo Dev for details"
      }
    ],
    "commands": [
      {
        "command": "yoyoDev.planProduct",
        "title": "Yoyo Dev: Plan Product",
        "category": "Yoyo Dev"
      },
      {
        "command": "yoyoDev.analyzeProduct",
        "title": "Yoyo Dev: Analyze Product",
        "category": "Yoyo Dev"
      },
      {
        "command": "yoyoDev.createNew",
        "title": "Yoyo Dev: Create New Feature",
        "category": "Yoyo Dev"
      },
      {
        "command": "yoyoDev.createSpec",
        "title": "Yoyo Dev: Create Specification",
        "category": "Yoyo Dev"
      },
      {
        "command": "yoyoDev.createTasks",
        "title": "Yoyo Dev: Create Tasks",
        "category": "Yoyo Dev"
      },
      {
        "command": "yoyoDev.executeTasks",
        "title": "Yoyo Dev: Execute Tasks",
        "category": "Yoyo Dev"
      },
      {
        "command": "yoyoDev.createFix",
        "title": "Yoyo Dev: Create Fix",
        "category": "Yoyo Dev"
      },
      {
        "command": "yoyoDev.orchestrateTasks",
        "title": "Yoyo Dev: Orchestrate Tasks",
        "category": "Yoyo Dev"
      },
      {
        "command": "yoyoDev.review",
        "title": "Yoyo Dev: Review Code",
        "category": "Yoyo Dev"
      },
      {
        "command": "yoyoDev.designInit",
        "title": "Yoyo Dev: Initialize Design System",
        "category": "Yoyo Dev"
      },
      {
        "command": "yoyoDev.designAudit",
        "title": "Yoyo Dev: Audit Design",
        "category": "Yoyo Dev"
      },
      {
        "command": "yoyoDev.designFix",
        "title": "Yoyo Dev: Fix Design",
        "category": "Yoyo Dev"
      },
      {
        "command": "yoyoDev.designComponent",
        "title": "Yoyo Dev: Create Design Component",
        "category": "Yoyo Dev"
      },
      {
        "command": "yoyoDev.help",
        "title": "Yoyo Dev: Help",
        "category": "Yoyo Dev"
      },
      {
        "command": "yoyoDev.containerize",
        "title": "Yoyo Dev: Containerize Application",
        "category": "Yoyo Dev"
      },
      {
        "command": "yoyoDev.improveSkills",
        "title": "Yoyo Dev: Improve Skills",
        "category": "Yoyo Dev"
      },
      {
        "command": "yoyoDev.refreshTasks",
        "title": "Refresh Tasks",
        "category": "Yoyo Dev",
        "icon": "$(refresh)"
      },
      {
        "command": "yoyoDev.refreshRoadmap",
        "title": "Refresh Roadmap",
        "category": "Yoyo Dev",
        "icon": "$(refresh)"
      },
      {
        "command": "yoyoDev.openSpec",
        "title": "Open Spec",
        "category": "Yoyo Dev"
      },
      {
        "command": "yoyoDev.toggleTaskComplete",
        "title": "Toggle Task Complete",
        "category": "Yoyo Dev"
      },
      {
        "command": "yoyoDev.viewSpec",
        "title": "View Spec in Webview",
        "category": "Yoyo Dev"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "yoyoDev.toggleTaskComplete",
          "when": "false"
        }
      ],
      "view/title": [
        {
          "command": "yoyoDev.refreshTasks",
          "when": "view == yoyoDevTasks",
          "group": "navigation"
        },
        {
          "command": "yoyoDev.refreshRoadmap",
          "when": "view == yoyoDevRoadmap",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "yoyoDev.toggleTaskComplete",
          "when": "view == yoyoDevTasks && viewItem == task"
        }
      ],
      "explorer/context": [
        {
          "command": "yoyoDev.createNew",
          "when": "explorerResourceIsFolder",
          "group": "yoyoDev@1"
        },
        {
          "command": "yoyoDev.createFix",
          "when": "explorerResourceIsFolder",
          "group": "yoyoDev@2"
        }
      ],
      "editor/context": [
        {
          "command": "yoyoDev.createFix",
          "group": "yoyoDev@1"
        }
      ]
    },
    "configuration": {
      "title": "Yoyo Dev",
      "properties": {
        "yoyoDev.autoRefresh": {
          "type": "boolean",
          "default": true,
          "description": "Automatically refresh views when .yoyo-dev files change"
        },
        "yoyoDev.logLevel": {
          "type": "string",
          "enum": [
            "debug",
            "info",
            "warn",
            "error"
          ],
          "default": "info",
          "description": "Logging level for Yoyo Dev extension"
        },
        "yoyoDev.terminal.showOnExecute": {
          "type": "boolean",
          "default": true,
          "description": "Show terminal when executing Yoyo Dev commands"
        },
        "yoyoDev.terminal.clearBeforeExecute": {
          "type": "boolean",
          "default": false,
          "description": "Clear terminal before executing commands"
        },
        "yoyoDev.git.autoRefreshInterval": {
          "type": "number",
          "default": 5000,
          "minimum": 1000,
          "description": "Auto-refresh interval for git status in milliseconds"
        },
        "yoyoDev.fileWatcher.debounceDelay": {
          "type": "number",
          "default": 500,
          "minimum": 100,
          "description": "Debounce delay for file watcher in milliseconds"
        },
        "yoyoDev.spec.preferLiteVersion": {
          "type": "boolean",
          "default": true,
          "description": "Prefer opening spec-lite.md over spec.md"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "node esbuild.js && node esbuild-webview.js",
    "watch": "node esbuild.js --watch",
    "watch:webview": "node esbuild-webview.js --watch",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/js-yaml": "^4.0.9",
    "@types/mocha": "^10.0.6",
    "@types/node": "20.x",
    "@types/react": "^19.2.4",
    "@types/react-dom": "^19.2.3",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "@vscode/test-electron": "^2.3.8",
    "esbuild": "^0.19.11",
    "eslint": "^8.56.0",
    "glob": "^10.3.10",
    "mocha": "^10.2.0",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "js-yaml": "^4.1.1",
    "marked": "^11.1.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0"
  }
}
