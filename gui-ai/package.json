{
  "name": "yoyo-ai-workspace",
  "version": "1.0.0",
  "description": "YoYo AI Workspace - Dashboard GUI for YoYo AI Assistant",
  "type": "module",
  "scripts": {
    "dev": "concurrently -k \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "tsx watch server/index.ts",
    "dev:client": "vite --port 5174",
    "build": "npm run build:client && npm run build:server",
    "build:client": "vite build",
    "build:server": "tsc -p tsconfig.server.json",
    "start": "node dist/server/index.js",
    "preview": "vite preview --port 5174",
    "test": "vitest",
    "test:run": "vitest run",
    "lint": "eslint client/src server --ext .ts,.tsx"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.1.0",
    "@dnd-kit/sortable": "^8.0.0",
    "@hono/node-server": "^1.13.7",
    "@hono/node-ws": "^1.0.4",
    "@hono/zod-validator": "^0.4.1",
    "@tanstack/react-query": "^5.62.0",
    "better-sqlite3": "^11.6.0",
    "framer-motion": "^11.15.0",
    "fuse.js": "^7.0.0",
    "hono": "^4.6.12",
    "lucide-react": "^0.468.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-markdown": "^9.0.1",
    "react-router-dom": "^7.0.2",
    "react-syntax-highlighter": "^15.6.1",
    "recharts": "^2.13.3",
    "zod": "^3.23.8",
    "zustand": "^5.0.2"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.11",
    "@types/node": "^22.10.1",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@types/react-syntax-highlighter": "^15.5.13",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.1.0",
    "postcss": "^8.4.49",
    "tailwindcss": "^3.4.16",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "vite": "^6.0.3",
    "vitest": "^2.1.8"
  }
}
